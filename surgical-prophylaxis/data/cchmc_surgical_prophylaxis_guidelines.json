  "general_principles": {
    "timing": {
      "standard_window_minutes": 60,
      "extended_window_minutes": 120,
      "description": "Pre-operative dose should be completed within 60 minutes prior to incision"
    },
    "duration": {
      "standard_hours": 24,
      "cardiac_max_hours": 48,
      "description": "For routine prophylaxis, antibiotics should not be continued after the incision is closed. For selected procedures, prophylaxis may continue up to 48 hours post incision closure."
    },
    "special_considerations": {
      "mrsa_positive": "Patients who screen positive for MRSA should be given a single pre-operative dose of vancomycin in addition to routine prophylaxis",
      "therapeutic_antibiotics": "Patients receiving treatment antibiotics should generally receive routine pre-operative prophylaxis in addition to their concurrent therapy",
      "gram_negative_mdro": "Patients with recent history of Gram-negative MDRO with need for bowel coverage, clean-contaminated, or contaminated/dirty surgical sites: consider Infectious-Diseases consultation or discuss with a clinical pharmacist"
    },
    "redosing": {
      "trigger": "Re-dose prophylactic antibiotic according to times in the table or if the patient has experienced excessive blood loss",
      "anticipatory_redose": "Re-dosing prior to case completion should be considered if completion is anticipated within 30 minutes of the usual re-dosing time"
    }
  },

