  "general_principles": {
    "timing": {
      "standard_window_minutes": 60,
      "vancomycin_window_minutes": 120,
      "fluoroquinolone_window_minutes": 120,
      "description": "Administer within 60 minutes of incision (120 min for vancomycin/fluoroquinolones to allow complete infusion)"
    },
    "duration": {
      "standard_hours": 24,
      "cardiac_max_hours": 48,
      "description": "Discontinue within 24 hours of surgery end (48 hours for cardiac surgery)"
    },
    "dosing": {
      "cefazolin": {
        "pediatric_mg_per_kg": 30,
        "pediatric_max_mg": 2000,
        "adult_standard_mg": 2000,
        "adult_high_weight_threshold_kg": 120,
        "adult_high_weight_mg": 3000,
        "redose_interval_hours": 4
      },
      "vancomycin": {
        "mg_per_kg": 15,
        "max_mg": 2000,
        "infusion_time_minutes": 60,
        "redose_interval_hours": null,
        "note": "Infuse over 60-120 minutes to avoid red man syndrome"
      },
      "metronidazole": {
        "pediatric_mg_per_kg": 15,
        "pediatric_max_mg": 500,
        "adult_standard_mg": 500,
        "redose_interval_hours": null
      },
      "clindamycin": {
        "pediatric_mg_per_kg": 10,
        "pediatric_max_mg": 900,
        "adult_standard_mg": 900,
        "redose_interval_hours": 6
      },
      "gentamicin": {
        "mg_per_kg": 2.5,
        "max_mg": 120,
        "redose_interval_hours": null,
        "note": "Use with caution; monitor renal function"
      }
    }
  },

